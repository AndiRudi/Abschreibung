@{ 
    System.Data.DataTable dataTable = Model["DataTable"] as System.Data.DataTable;

}
<h2 class="direct">Alle Anlagengüter beginnend mit </h2>
<div id="timespan" class="direct">Letzte Aktualisierung: <span class="date"><strong>@System.DateTime.Now.ToShortDateString()</strong></span></div>
<table id="prices">
    <tbody>
        <tr class="top">
            <th width="55%">Anlagegut</th>
            <th width="15%" class="right"><div align="center">Nutzungsdauer </div></th>
            <th width="15%" class="right"><div align="center">Lin-AfA </div></th>
            <th width="15%" class="right"><div align="center">Fundstelle</div></th>            
        </tr>
        @foreach (System.Data.DataRow row in dataTable.Rows)
        {
            <tr>
                <td>@row["Wort"]</td>
                <td class="right"><div align="center">@row["Nutzungsdauer"]</div></td>
                <td class="right"><div align="center">@row["LinAfA"]</div></td>
                <td class="right"><div align="center">@row["LfdNr"]</div></td>
            </tr>
        }
    </tbody>
</table>